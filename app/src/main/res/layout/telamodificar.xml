<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp" />

    <EditText
        android:id="@+id/editQuantidadeMod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Quantidade"
        android:inputType="number" />

    <EditText
        android:id="@+id/editDescricaoMod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editQuantidadeMod"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Descrição"
        android:inputType="text" />

    <EditText
        android:id="@+id/editLocalizacaoMod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editQualidadeMod"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="Localização"
        android:inputType="text" />

    <EditText
        android:id="@+id/editQualidadeMod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Qualidade"
        android:inputType="text" />

    <EditText
        android:id="@+id/editCustoMod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editQualidadeMod"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Custo"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btModificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editCustoMod"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Modificar" />
</RelativeLayout>